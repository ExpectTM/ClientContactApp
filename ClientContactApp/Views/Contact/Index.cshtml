@model IEnumerable<ClientContactApp.Models.Contact>

<style>
    .card-header, .head {
        background-color: #D22B2B;
    }
</style>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Create Contact</button>
    </li>

    <li class="nav-item" role="presentation">
        <button class="nav-link" id="contacts-tab" data-bs-toggle="tab" data-bs-target="#contacts" type="button" role="tab" aria-controls="contacts" aria-selected="false">Contact List</button>
    </li>

    <li class="nav-item" role="presentation">
        <button class="nav-link" id="link-tab" data-bs-toggle="tab" data-bs-target="#link" type="button" role="tab" aria-controls="link" aria-selected="false">Linked Clients</button>
    </li>

</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">
                    <span class="text-white">New Contact<span class="text-bold"></span></span>
                </div>

                <div class="card-body">
                    <div type="button" class="btn btn-info">

                        <a class="text-primary text-decoration-none" asp-action="OnCreateContact">
                            Add Contact
                        </a>
                    </div>

                </div>
            </div>

        </div>

    </div>

    <div class="tab-pane fade" id="contacts" role="tabpanel" aria-labelledby="contacts-tab">

        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="text-white"></i>
                    <span class="text-white">Contacts<span class="text-bold"></span></span>
                </div>

                <div class="card-body">

                    <table class="table mr-5 ml-5 table-striped" id="datatablesSimple">
                        <thead class="head">
                            <tr>

                                <th>
                                    Name
                                </th>

                                <th>
                                    Surname
                                </th>

                                <th>
                                    Email
                                </th>

                                <th>
                                    Number of linked Client
                                </th>

                                <th>
                                    Unlink Client
                                </th>


                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var contact in Model)
                            {
                                <tr>

                                    <td>

                                        @contact.Name

                                    </td>

                                    <td>
                                        @contact.Surname
                                    </td>

                                    <td>
                                        @contact.Email
                                    </td>

                                    <td class="text-center">
                                        @{

                                            var contactClientCounts = (Dictionary<Guid, int>)ViewData["ContactClientCounts"];

                                            int clientCount = 0;

                                            if (contactClientCounts.TryGetValue(contact.ContactId, out clientCount))
                                            {

                                                @clientCount
                                            }
                                        }
                                    </td>

                                    <td>
                                        <div type="button" class="btn btn-info">

                                            <a class="text-primary text-decoration-none" asp-controller="ClientContact" asp-action="UnlinkContactsFromClient" asp-route-contactId="@contact.ContactId">
                                                Unlink
                                            </a>
                                        </div>
                                    </td>
                                    

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <div class="tab-pane fade" id="link" role="tabpanel" aria-labelledby="link-tab">

        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">
                    <span class="text-white">Linked Clients<span class="text-bold"></span></span>
                </div>

                <div class="card-body">
                </div>

            </div>


        </div>
    </div>

</div>
