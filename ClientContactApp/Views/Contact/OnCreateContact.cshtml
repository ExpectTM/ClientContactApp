@model ClientContactApp.Models.Contact

<style>
    .card-header, .head {
        background-color: #D22B2B;
    }

    fieldset {
        background-color: #eeeeee;
        border-radius: 10px;
        padding: 5px 10px;
    }

    legend {
        background-color: #D22B2B;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 15px;
    }

</style>

<div class="col-xl-12">
    <div class="card mb-4">
        <div class="card-header">
            <span class="text-white">Contact Registration Section<span class="text-bold"></span></span>
        </div>
        <div class="card-body">
            <form asp-action="OnCreateContact" enctype="multipart/form-data">
                <div class="row mt-3">
                    <div class="col-md-10">

                        <fieldset>
                            <div class="row mt-3">
                                <legend>Client Details</legend>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Name</label>
                                    <div class="input-group mb-3 input1">
                                        <input asp-for="Name" class="form-control" required />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group col-md-3">
                                    <label class="control-label">Surname</label>
                                    <div class="input-group mb-3 input1">
                                        <input asp-for="Surname" class="form-control" required />
                                        <span asp-validation-for="Surname" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group col-md-3">
                                    <label class="control-label">Email</label>
                                    <div class="input-group mb-3 input1">
                                        <input asp-for="Email" class="form-control" required />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>

                        </fieldset>
                    </div>

                </div>


                <div class="form-group col-md-12 mt-3" style="background-color:whitesmoke;">
                    <button type="submit" class="btn btn-success save"><i class="fa fa-save"></i> Save</button>
                    <a class="btn btn-outline-danger float-end" asp-action="Index" asp-controller="Home"><i class="fa fa-window-close"></i> Exit</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

